<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/register_or_welcome_card_width"

        card_view:cardBackgroundColor="#fff"
        card_view:cardElevation="2dp"

        android:layout_gravity="center"

        card_view:cardUseCompatPadding="true"

        android:layout_height="wrap_content">

        <!--Welcome and form will go here-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="@dimen/welcome_padding_top"
                android:text="Register Shop"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/welcome_size"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>

            <!--Store name section-->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/register_form_icon_size"
                    android:layout_height="@dimen/register_form_icon_size"
                    android:src="@mipmap/ic_launcher" />
                <EditText
                    android:id="@+id/shop_name_edit_text"
                    android:maxLength="60"
                    android:hint="Shop Name"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Store address section-->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/register_form_icon_size"
                    android:layout_height="@dimen/register_form_icon_size"
                    android:src="@mipmap/ic_launcher" />
                <EditText
                    android:maxLength="150"
                    android:id="@+id/shop_address_edit_text"
                    android:hint="Shop Address"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Mobile number section-->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/register_form_icon_size"
                    android:layout_height="@dimen/register_form_icon_size"
                    android:src="@mipmap/ic_launcher" />
                <EditText
                    android:id="@+id/phone_number_edit_text"
                    android:maxLength="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Pin Code section-->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/register_form_icon_size"
                    android:layout_height="@dimen/register_form_icon_size"
                    android:src="@mipmap/ic_launcher" />
                <EditText
                    android:id="@+id/pin_code_edit_text"
                    android:maxLength="6"
                    android:hint="Pin Code"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Submit button-->
            <Button
                android:id="@+id/join"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:text="Join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Registration time slogan-->
            <TextView
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="It's all yours"
                android:textColor="@color/colorAccent"
                android:id="@+id/register_slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
